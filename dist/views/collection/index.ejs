<!DOCTYPE html>
<html>

<head>
  <title>Collection</title>
  <link href="https://fonts.googleapis.com/css?family=Roboto+Condensed:300,400,700" rel="stylesheet">
</head>

<body>
  <div class="container">
    <div class="cards">
       <% vinyls.forEach(vinyl => { %>
          <div class="card">
            <img class="card-img" src="<%= vinyl.image %>">
            <div class="content">
              <span class="card-title"><%= vinyl.title %></span>
              <span class="card-artist"><%= vinyl.artist %></span>
              <a class="btn-full" href="/collection/<%= vinyl._id %>">View</a>
            </div>
          </div>
       <% }); %>
    </div>
  </div>
  </div>


  <style>
    html,
    body {
      color: #555;
      font-family: 'Roboto Condensed', sans-serif;
      font-size: 20px;
      font-weight: 300;
      text-rendering: optimizeLegibility;
      overflow-x: hidden;
    }


    .container {
      max-width: 1100px;
      margin: 0 auto;
    }

    .cards {
      display: flex;
      -webkit-flex-wrap: wrap;
      flex-wrap: wrap;
      margin-top: 15px;
      justify-content: flex-start;
    }

    .card {
      border: 1px solid #d3d3d3;
      border-radius: .25rem;
      position: relative;
      margin: 10px;
      padding: 5px;
      width: 20%;
      min-width: 200px;
    }

    .card-img {
      width: 100%;
      min-height: 180px;
    }

    .card-title {
      font-weight: 400;
    }

    .card-title,
    .card-artist {
      line-height: 150%;
    }

    .content {
      padding: 5px;
    }

    a:link,
    a:visited {
      width: 90%;
      color: #ccc;
      padding: 10px;
      text-align: center;
      text-decoration: none;
      display: block;
      border: solid #ccc 1px;
      border-radius: .25rem;
      transition: background-color 0.2s, color 0.2s;
    }


    a:hover,
    a:active {
      background-color: #ccc;
      color: white;
    }
  </style>
</body>

</html>