<% include ../partials/header %>

  <div>
    <img src= <%= vinyl.image %> alt="">
    <h3>Artist: <%= vinyl.artist %></h3>
    <h3>Title <%= vinyl.title %></h3>
    <h3>CatNo: <%= vinyl.labels[0].catno %></h3>
    <h3>Price $<%= vinyl.price %></h3>
    <h3>Condition: <%= vinyl.condition %></h3>
    <table class="table table-sm">

      <tbody>
      <% vinyl.tracklist.forEach(track => { %>
      <tr>
          <td><%= track.position %> </td>
          <td><%= track.title %> </td>
          <td><%= track.duration %></td>
      </tr>
      <% }); %>
      </tbody>
    </table>

    <a href="/collection/<%= vinyl._id %>/edit" class="btn">Edit</a>

    <form action="/collection/<%= vinyl._id %>?_method=DELETE" method="POST">
      <button class="btn">Delete</button>
   </form>

  </div>
</body>
</html>