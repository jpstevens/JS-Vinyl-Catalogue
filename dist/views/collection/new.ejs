<% include ../partials/header %>

<body>
  <div class="container">
    <h1>Add new Vinyl to your collection</h1>
    <div>
      <form action="/collection/new" method="POST">
        <div>
          <label for="title">Title</label>
          <input type="text" name="title" placeholder="Title" id="title">
        </div>
        <div class=>
          <label for="artist">Artist</label>
          <input type="text" name="artist" placeholder="Artist" id="artist">
        </div>
        <div>
          <label for="country">Country</label>
          <select name="country" id="country" required>
            <option>UK</option>
            <option>Europe</option>
            <option>UK/Europe</option>
            <option>US</option>
          </select>
        </div>

        <div>
          <label for="condition">Title</label>
          <select name="condition" id="condition">
            <option>M - Mint</option>
            <option>NM - Near Mint</option>
            <option>VG+ - Very Good Plus</option>
            <option>VG - Very Good</option>
            <option>G - Good</option>
            <option>P - Poor</option>
          </select>
        </div>

        <div>
          <button>Submit</button>
        </div>
      </form>
    </div>

  </div>
</body>

</html>